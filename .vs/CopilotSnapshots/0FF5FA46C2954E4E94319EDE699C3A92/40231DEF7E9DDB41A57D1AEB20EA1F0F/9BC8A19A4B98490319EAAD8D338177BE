        An error has occurred. This application may no longer respond until reloaded.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    
    <script src="_framework/blazor.web.js" autostart="false"></script>
    <script>
        Blazor.start({
            configureSignalR: function (builder) {
                builder.withAutomaticReconnect({
                    nextRetryDelayInMilliseconds: retryContext => {
                        if (retryContext.previousRetryCount < 3) {
                            return 0;
                        }
                        else if (retryContext.previousRetryCount < 7) {
                            return 2000;
                        }
                        else if (retryContext.previousRetryCount < 12) {
                            return 5000;
                        }
                        else {
                            return null;
                        }
                    }
                });
                
                builder.withServerTimeout(30000);
                builder.withKeepAliveInterval(15000);
            },
            circuit: {
                reconnectionHandler: {
                    onConnectionDown: () => {
                        console.log('Blazor connection lost.');
                    },
                    onConnectionUp: () => {
                        console.log('Blazor connection restored!');
                        window.location.reload();
                    }
                }
            }
        });
    </script>
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>
