namespace allofthesestarshaveareason.Configuration;

/// <summary>
/// Whisper AI konfigürasyon ayarları
/// </summary>
public class WhisperConfiguration
{
    public const string SectionName = "Whisper";
    
    /// <summary>
    /// Whisper model dosyasının yolu
    /// </summary>
    public string ModelPath { get; set; } = "models/ggml-base.bin";
    
    /// <summary>
    /// Model tipi (tiny, base, small, medium, large)
    /// </summary>
    public string ModelType { get; set; } = "base";
    
    /// <summary>
    /// Varsayılan dil (null = otomatik algılama)
    /// </summary>
    public string? DefaultLanguage { get; set; }
}

/// <summary>
/// Dosya saklama konfigürasyon ayarları
/// </summary>
public class FileStorageConfiguration
{
    public const string SectionName = "FileStorage";
    
    /// <summary>
    /// Yükleme dizini
    /// </summary>
    public string UploadDirectory { get; set; } = "uploads";
    
    /// <summary>
    /// Maksimum dosya boyutu (MB)
    /// </summary>
    public int MaxFileSizeMB { get; set; } = 500;
    
    /// <summary>
    /// İzin verilen video uzantıları
    /// </summary>
    public string[] AllowedExtensions { get; set; } = { ".mp4", ".avi", ".mov", ".mkv" };
}

/// <summary>
/// Sahne tespiti konfigürasyon ayarları
/// </summary>
public class SceneDetectionConfiguration
{
    public const string SectionName = "SceneDetection";
    
    /// <summary>
    /// Varsayılan eşik değeri (0-1 arası, düşük = daha hassas)
    /// </summary>
    public double DefaultThreshold { get; set; } = 0.7;
    
    /// <summary>
    /// Saniyede kaç kare analiz edilecek
    /// </summary>
    public int FramesPerSecond { get; set; } = 1;
}

/// <summary>
/// FFmpeg konfigürasyon ayarları
/// </summary>
public class FFmpegConfiguration
{
    public const string SectionName = "FFmpeg";
    
    /// <summary>
    /// FFmpeg executable yolu (null = sistem PATH'inde ara)
    /// </summary>
    public string? ExecutablePath { get; set; }
    
    /// <summary>
    /// Ses çıkarma parametreleri
    /// </summary>
    public string AudioExtractionArgs { get; set; } = "-vn -acodec pcm_s16le -ar 16000 -ac 1";
}
