namespace allofthesestarshaveareason.Services.Interfaces;

/// <summary>
/// FFmpeg işlemlerini yöneten servis arayüzü
/// </summary>
public interface IFFmpegService
{
    /// <summary>
    /// Video dosyasından ses çıkarır
    /// </summary>
    Task<string> ExtractAudioAsync(string videoPath, string outputPath, CancellationToken cancellationToken = default);
    
    /// <summary>
    /// Videodan frame'ler çıkarır
    /// </summary>
    Task<IReadOnlyList<string>> ExtractFramesAsync(string videoPath, string outputDirectory, int framesPerSecond = 1, CancellationToken cancellationToken = default);
    
    /// <summary>
    /// FFmpeg'in yüklü olup olmadığını kontrol eder
    /// </summary>
    bool IsFFmpegAvailable();
}
