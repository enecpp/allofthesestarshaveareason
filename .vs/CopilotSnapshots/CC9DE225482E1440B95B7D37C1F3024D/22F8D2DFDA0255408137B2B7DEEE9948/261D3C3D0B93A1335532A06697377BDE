@code {
    private void NavigateToUpload() => Navigation.NavigateTo("/upload");
    private void NavigateToDemo() => Navigation.NavigateTo("/analysis/1");

    private record Feature(string Icon, string Title, string Description, Color Color);
    private record Step(string Title, string Description, Color Color);

    private List<Feature> GetFeatures() => new()
    {
        new(Icons.Material.Filled.Movie, "Scene Detection", "AI-powered automatic segmentation identifying key scenes and transitions with frame-level accuracy", Color.Primary),
        new(Icons.Material.Filled.Subtitles, "Smart Transcription", "Industry-leading speech recognition with speaker diarization and timestamp precision", Color.Secondary),
        new(Icons.Material.Filled.Search, "Intelligent Search", "Lightning-fast semantic search across all video content with context-aware results", Color.Tertiary),
        new(Icons.Material.Filled.Timeline, "Interactive Timeline", "Cinematic timeline visualization with scene markers and jump-to navigation", Color.Info),
        new(Icons.Material.Filled.Analytics, "Deep Analytics", "Advanced ML models analyzing sentiment, topics, and extracting actionable insights", Color.Success),
        new(Icons.Material.Filled.Speed, "Ultra-Fast Processing", "Optimized ONNX Runtime pipeline delivering results 10x faster than competitors", Color.Warning)
    };

    private List<Step> GetSteps() => new()
    {
        new("Upload", "Securely upload your video with drag-and-drop simplicity", Color.Primary),
        new("Process", "Our AI engine analyzes every frame and audio segment", Color.Secondary),
        new("Analyze", "Explore comprehensive insights through our intuitive interface", Color.Tertiary),
        new("Export", "Download structured data and share insights with your team", Color.Success)
    };
}
